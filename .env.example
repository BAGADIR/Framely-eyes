# Framely-Eyes Environment Configuration
# Copy this to .env and customize for your environment

# =============================================================================
# Qwen-VL Configuration
# =============================================================================

# Qwen server API endpoint (use a free port, avoid nginx's 8001)
export QWEN_API_BASE="http://127.0.0.1:8123/v1"

# Qwen model name (must match the model loaded in SGLang server)
# Options: Qwen/Qwen3-VL-8B-Instruct, Qwen/Qwen2.5-VL-7B-Instruct
export QWEN_MODEL="Qwen/Qwen3-VL-8B-Instruct"

# Qwen API timeout in seconds
export QWEN_TIMEOUT="180"

# Enable/disable Qwen reasoning (1=enabled, 0=disabled)
export QWEN_ENABLED="1"

# Qwen server port (for starting the server)
export QWEN_PORT="8123"

# Qwen GPU memory fraction (0.0-1.0, lower if OOM issues)
export QWEN_MEM_FRACTION="0.50"

# =============================================================================
# Model Cache Paths (for persistence across pod restarts)
# =============================================================================

# Hugging Face cache (stores downloaded models)
export HF_HOME="/workspace/model_cache/hf"

# PyTorch cache
export TORCH_HOME="/workspace/model_cache/torch"

# Ultralytics (YOLO) cache
export ULTRALYTICS_HOME="/workspace/model_cache/ultralytics"

# =============================================================================
# Pipeline Configuration
# =============================================================================

# Frame stride (1 = every frame, 2 = every 2nd frame, etc.)
export FRAME_STRIDE="1"

# GPU semaphore (max concurrent GPU tasks)
export GPU_SEMAPHORE="2"

# =============================================================================
# API Configuration (optional, for future API server)
# =============================================================================

# API server host
export API_HOST="0.0.0.0"

# API server port
export API_PORT="8000"

# Redis URL for job queue
export REDIS_URL="redis://localhost:6379"

# =============================================================================
# Logging & Debug
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
export LOG_LEVEL="INFO"

# Enable debug mode (1=enabled, 0=disabled)
export DEBUG="0"
