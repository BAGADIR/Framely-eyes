# Framely-Eyes Environment Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# GPU Settings
NVIDIA_VISIBLE_DEVICES=0
CUDA_VISIBLE_DEVICES=0

# Qwen VL Service
QWEN_API_BASE=http://qwen:8000/v1
QWEN_API_KEY=EMPTY

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Storage
STORE_PATH=/app/store
MAX_VIDEO_MB=1000

# Model Cache
HF_HOME=/app/.cache/huggingface
TORCH_HOME=/app/.cache/torch

# Security
MIME_WHITELIST=video/mp4,video/quicktime,video/x-matroska

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Timeouts (seconds)
DETECTOR_TIMEOUT=300
QWEN_TIMEOUT=60

# Feature Flags
ENABLE_SUPERRES=true
ENABLE_SAM2=true
ENABLE_AUDIO_DIARIZATION=false
